# ==================================================
# 1. Qdrant (RAG)
# ==================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_PARENTS_COLLECTION=transformers_parents
QDRANT_CHUNKS_COLLECTION=transformers_chunks

# ==================================================
# 2. LLM Provider (выбираем один)
# ==================================================

# --- вариант 1: OpenAI (нужен ключ OpenAI) ---
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...

# --- вариант 2: OpenRouter (ключ начинается с sk-or-v1...) ---
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=
OPENROUTER_REFERER=https://github.com/your-org/llm-assistant
OPENROUTER_APP_TITLE=LLM Assistant
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# --- вариант 3: локальный Transformers (без ключей, для оффлайн) ---
# LLM_PROVIDER=transformers
# TRANSFORMERS_MODEL=TinyLlama/TinyLlama-1.1B-Chat-v1.0

# --- вариант 4: Ollama (если установлен ollama serve) ---
# LLM_PROVIDER=ollama
# OLLAMA_HOST=http://localhost:11434
# LLM_MODEL=llama3.1:8b

# ==================================================
# 3. Основные LLM параметры
# ==================================================
LLM_MODEL=google/gemini-2.0-flash-exp:free
LLM_TEMPERATURE=0.0
LLM_MAX_OUTPUT_TOKENS=512
LLM_TIMEOUT_SEC=60
LLM_TOP_P=1.0
LLM_STREAM=trueы
LLM_MAX_RETRIES=3

# ==================================================
# 4. Пути к YAML-конфига (если используешь их)
# ==================================================
# LLM и агенты
LLM_CONFIG_PATH=configs/llm.yaml
AGENT_CONFIG=configs/agent.yaml
QA_CONFIG=configs/qa.yaml

# Компоненты RAG / индексации
DB_CONFIG=configs/db.yaml
CHUNKING_CONFIG=configs/chunking.yaml
EMBEDDINGS_CONFIG=configs/embeddings.yaml
INDEXER_CONFIG=configs/indexer.yaml
PT_LOADER_CONFIG=configs/pt_loader.yaml

# ==================================================
# 5. Прочие настройки приложения
# ==================================================
PORT=8000
LOG_LEVEL=info
ENVIRONMENT=development
APP_VERSION=1.0.0

# ---- PostgreSQL для Docker ----
DB_READONLY=true
DB_SCHEMA=public

# Админский URL для Docker
DB_URL_ADMIN=postgresql+psycopg://postgres:postgres@postgres:5432/transformers

# ---- PostgreSQL для локальной разработки (без Docker) ----
# DB_URL_ADMIN=postgresql+psycopg://postgres:postgres@localhost:5432/transformers